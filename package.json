{
  "name": "@ali/config-component",
  "version": "0.0.24",
  "description": "",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "keywords": [
    "schema config form",
    "schema config component",
    "javascript"
  ],
  "workspaces": [
    "playground/*"
  ],
  "scripts": {
    "lint": "eslint ./src --ext .ts,.tsx,.js,.jsx --fix",
    "test": "jest",
    "build": "tsc",
    "validate": "yarn build && yarn lint && yarn test --silent --coverage",
    "prerelease": "yarn build",
    "release": "dotenv lerna publish",
    "setup": "yarn install && yarn validate",
    "storybook": "cd ./playground/form && npm run start",
    "storybook:build": "cd ./playground/form && npm run build-storybook",
    "cmt": "tsc && git acm 'test' && git push origin master",
    "pub": "npm version patch && npm publish",
    "pubt": "npm version patch && tnpm publish",
    "start:playground": "concurrently \"yarn build --watch\" \"yarn workspace form-playground start\""
  },
  "dependencies": {
    "react": "^16.8.6",
    "react-fast-compare": "^2.0.4",
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.0",
    "@types/react": "^16.8.11",
    "@types/yup": "^0.26.12",
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "@typescript-eslint/parser": "^2.0.0",
    "codecov": "^3.3.0",
    "concurrently": "^4.1.0",
    "doctoc": "^1.4.0",
    "dotenv-cli": "^2.0.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-import-resolver-typescript": "^1.1.1",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.6.0",
    "husky": "^1.3.1",
    "jest": "^24.7.0",
    "lerna": "^3.13.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "react-dom": "^16.8.6",
    "react-hooks-testing-library": "^0.4.0",
    "ts-jest": "^24.0.1",
    "typescript": "^3.4.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverageFrom": [
      "packages/**/src/**/*.{ts,tsx}"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "README.md": [
      "doctoc"
    ],
    "docs/*.md": [
      "doctoc"
    ],
    "**/*.md": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "author": "haomou.chh",
  "license": "ISC",
  "publishConfig": {
    "registry": "https://registry.npm.alibaba-inc.com"
  }
}
